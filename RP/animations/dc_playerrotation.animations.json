{
	"format_version": "1.8.0",
	"animations": {
		"animation.dc_player.rotation": {
			"loop": true,
			"bones": {
				"root": {
					"rotation": { 
						"0.0": [ 0, "v.dc_angle-q.body_y_rotation", 0 ]
					}
				}
		}
	},
	    "animation.dc_player_head.rotation": {
		    "loop": true,
		    "bones": {
                "head": {
					"rotation": {
					    "0.0": [ "-q.target_x_rotation", "-q.target_y_rotation-q.body_y_rotation+v.dc_angle", 0 ]
				}
			}
		}
	},
	// Those are optional, but without those, it'll rotate the player crazy when sneaking or swimming.
	"animation.player.sneaking" : {
			"loop" : true,
			"bones" : {
				"root" : {
					"position" : [ 0.0, 0.0, 0.0 ]
				}
			}
		},
		"animation.player.swim" : {
			"animation_length" : 1.3,
			"loop" : true,
			"override_previous_animation" : true,
			"bones" : {
				"leftarm" : {
					"rotation" : {
						"0" : [ 0.0, 180.0, 180.0 ],
						"0.7" : [ 0.0, 180.0, 287.2 ],
						"1.1" : [ 90.0, 180.0, 180.0 ],
						"1.3" : [ 0.0, 180.0, 180.0 ]
					}
				},
				"rightarm" : {
					"rotation" : {
						"0" : [ 0.0, 180.0, -180.0 ],
						"0.7" : [ 0.0, 180.0, -287.2 ],
						"1.1" : [ 90.0, 180.0, -180.0 ],
						"1.3" : [ 0.0, 180.0, -180.0 ]
					}
				},
				"root" : {
					"position" : [ 0.0, 0.0, 0.0 ],
					"rotation" : [ "variable.swim_amount * (90 + query.target_x_rotation)", 0.0, 0.0 ]
				}
			}
		}
    }
}